[Unit]
Description="Tungsten SVC Monitor"
After=network.target

[Service]
Type=simple
ExecStart=/usr/bin/tungsten-svc-monitor --conf_file /etc/tungsten/tungsten-svc-monitor.conf --conf_file /etc/tungsten/tungsten-keystone-auth.conf
PIDFile=/var/run/tungsten/tungsten-svc-monitor.pid
TimeoutStopSec=0
Restart=always
User=tungsten
Group=tungsten
ExecStop=/bin/kill -s TERM $MAINPID

PrivateTmp=yes
PrivateDevices=yes
ProtectHome=yes
ReadOnlyDirectories=/
ReadWriteDirectories=-/var/crashes
ReadWriteDirectories=-/var/log/tungsten
ReadWriteDirectories=-/etc/tungsten

[Install]
WantedBy=multi-user.target
